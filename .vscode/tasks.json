{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Touch",
			"type": "shell",

				"options": {
					"cwd": "${workspaceFolder}/"
				},
				"command": "touch",
				"args": ["src/elix_os_window.cpp", "src/elix_os.cpp"],

			"problemMatcher": ["$gcc"],
			"group": "build"
		},
		{
			"label": "Build",
			"type": "shell",
			"linux": {
				"options": {
					"cwd": "${workspaceFolder}/"
				},
				"command": "ninja"
			},
			"windows": {
				"options": {
					"cwd": "${workspaceFolder}/"
				},
				"command": "c:/dev/ninja",
				"args": ["2>&1"]
			},
			"dependsOn": "Touch",
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Clean",
			"type": "shell",
			"linux": {
				"options": {
					"cwd": "${workspaceFolder}/"
				},
				"command": "ninja",
				"args": ["clean"]

			},
			"windows": {
				"options": {
					"cwd": "${workspaceFolder}/"
				},
				"command": "c:/dev/ninja ",
				"args": ["clean","2>&1"]
			},
			"problemMatcher": ["$gcc"],
			"group": "build"
				
			
		}
	]
}